# API Authentication
SECRET_KEY="your-secret-key-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service Configuration
SERVICE_NAME="matching_service"
ENVIRONMENT="development"
DEBUG=True

# Logging Configuration
LOG_LEVEL="DEBUG"
SYSLOG_HOST="172.17.0.1"
SYSLOG_PORT=5141
JSON_LOGS=True
LOG_RETENTION="7 days"
ENABLE_LOGSTASH=True

# Database Connections
DATABASE_URL="postgresql://testuser:testpassword@localhost:5432/matching"
MONGODB="mongodb://localhost:27017"
MONGODB_DATABASE="resumes"

# Message Queue
RABBITMQ_URL="amqp://guest:guest@localhost:5672/"
MATCHING_QUEUE="job_to_apply_queue"

# AI/LLM Integration
OPENAI_API_KEY="your-openai-api-key"
LLM_BASE_URL="https://openrouter.ai/api/v1"
LLM_MODEL_NAME="openai/gpt-4o-mini"

# Metrics Configuration
METRICS_ENABLED=True
METRICS_DEBUG=False
METRICS_BACKEND="statsd"  # Options: statsd, prometheus, logging
METRICS_PREFIX="matching_service"
METRICS_SAMPLE_RATE=1.0
METRICS_HOST="127.0.0.1"  # StatsD/Prometheus host
METRICS_PORT=8125  # StatsD default: 8125, Prometheus default: 9090

# Metrics Collection
PERIODIC_METRICS_ENABLED=True
METRICS_COLLECTION_INTERVAL=30
DETAILED_METRICS_ENABLED=False
SYSTEM_METRICS_ENABLED=True
SYSTEM_METRICS_INTERVAL=60

# Performance Thresholds
SLOW_REQUEST_THRESHOLD=1.0  # seconds
SLOW_QUERY_THRESHOLD=0.5  # seconds
SLOW_OPERATION_THRESHOLD=2.0  # seconds

# Backend-specific Metrics Settings
STATSD_USE_TAGS=True
PROMETHEUS_STANDALONE=False  # Set to True to run a standalone Prometheus HTTP server

# Datadog Integration (Optional)
DD_API_KEY="your-datadog-api-key"
DD_APP_KEY="your-datadog-app-key"