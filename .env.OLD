# API Authentication
SECRET_KEY="your-secret-key-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service Configuration
SERVICE_NAME="matching_service"
ENVIRONMENT="development"
DEBUG=True

# Logging Configuration
LOG_LEVEL="DEBUG"
JSON_LOGS=True

# Database Connections
DATABASE_URL="postgresql://testuser:testpassword@localhost:5432/matching"
MONGODB="mongodb://localhost:27017"
MONGODB_DATABASE="resumes"

# Database Connection Pooling
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30.0
DB_POOL_MAX_IDLE=300
DB_STATEMENT_TIMEOUT=60000

# Vector Optimization Settings
VECTOR_INDEX_TYPE="ivfflat"
VECTOR_IVF_LISTS=100
VECTOR_IVF_PROBES=10

# Metrics Configuration
METRICS_ENABLED=True
METRICS_DEBUG=False
METRICS_BACKEND="logging"
METRICS_PREFIX="matching_service"
METRICS_SAMPLE_RATE=1.0

# Metrics Collection
PERIODIC_METRICS_ENABLED=False
METRICS_COLLECTION_INTERVAL=30
DETAILED_METRICS_ENABLED=False
SYSTEM_METRICS_ENABLED=False

# Performance Thresholds
SLOW_REQUEST_THRESHOLD=1.0
SLOW_QUERY_THRESHOLD=0.5
SLOW_OPERATION_THRESHOLD=2.0